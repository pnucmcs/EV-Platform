{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "App": {
    "Name": "billing-service",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  },
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=billing_service;Username=postgres;Password=postgres"
  },
  "RabbitMq": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "Exchange": "ev.platform"
  },
  "Services": {
    "PricingService": {
      "BaseUrl": "http://pricingservice:8080"
    }
  },
  "OpenTelemetry": {
    "Enabled": true,
    "Exporter": "otlp",
    "Otlp": {
      "Endpoint": "http://192.168.1.191:4317"
    },
    "Tracing": {
      "Sampling": "parentbased_always_on"
    }
  }
}
